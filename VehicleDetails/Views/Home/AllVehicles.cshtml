@model VehicleDetails.Models.RequiredModels.ViewModels.BrandCategories
@{
    ViewBag.Title = "AllVehicles";
    Layout = "~/Views/Shared/MainView.cshtml";
}


@section search{
    <form class="form-inline d-flex my-2 my-lg-0" action="/home/allvehicles">
        <input class="form-control mr-sm-2" type="search" id="search" name="search" placeholder="search" value="@ViewBag.Search" aria-label="Search">
        <button class="btn btn-warning my-2 my-sm-0" type="submit">Search</button>
    </form>
}

<div class="container-fluid" id="gridView" style="display:block; height:100vh" ">
    <div class="container-fluid col-12 g-6 d-flex flex-wrap justify-content-center">
        @foreach (var data in Model.vehiclesModel)
        {
            <a href="/home/details/@data.VehicleID" class="text-decoration-none justify-content-between" style="color:black">
                <div class="card" style="width: 18rem; margin: 1rem;">
                    <img class="card-img-top" src="@data.ImageUrl" alt="Card image cap" style="height:10rem">
                    <div class="card-body">
                        <h4>@data.VehicleName</h4>
                        <p>@data.BrandName</p>
                        <p>@data.price</p>
                        <p>@data.FuelType</p>

                    </div>
                </div>
            </a>
        }
    </div>
</div>